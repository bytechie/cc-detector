# Staging Environment Configuration
# Use for staging and pre-production testing

# Flask Settings
FLASK_ENV=staging
FLASK_DEBUG=false
SUBAGENT_PORT=5000
HOST=0.0.0.0

# Logging
LOG_LEVEL=INFO

# Presidio Services (staging)
PRESIDIO_ANALYZER_URL=http://presidio-analyzer-staging:3000
PRESIDIO_ANONYMIZER_URL=http://presidio-anonymizer-staging:3001

# Database (staging)
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres-staging:5432/creditcard_detector_staging
REDIS_URL=redis://redis-staging:6379/0

# Security
SECRET_KEY=${STAGING_SECRET_KEY}
CLAUDE_API_KEY=${STAGING_CLAUDE_API_KEY}

# Application Settings
APP_MODE=metrics
ENABLE_METRICS=true
ENABLE_ADAPTIVE=true
ENABLE_RESOURCE_MONITORING=true

# Performance
MAX_CONCURRENT_REQUESTS=20
REQUEST_TIMEOUT=30

# Staging Settings
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://staging.example.com

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_ENABLED=true