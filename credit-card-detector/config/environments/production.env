# Production Environment Configuration
# Use for production deployment

# Flask Settings
FLASK_ENV=production
FLASK_DEBUG=false
SUBAGENT_PORT=5000
HOST=0.0.0.0

# Logging
LOG_LEVEL=WARNING

# Presidio Services (production)
PRESIDIO_ANALYZER_URL=http://presidio-analyzer:3000
PRESIDIO_ANONYMIZER_URL=http://presidio-anonymizer:3001

# Database (production)
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/creditcard_detector
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your_production_secret_key_here_change_this_in_production
CLAUDE_API_KEY=your_production_claude_api_key_here

# Database Credentials
POSTGRES_PASSWORD=your_production_postgres_password_change_this
REDIS_PASSWORD=your_production_redis_password_change_this

# Application Settings
APP_MODE=full
ENABLE_METRICS=true
ENABLE_ADAPTIVE=true
ENABLE_RESOURCE_MONITORING=true

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Production Settings
ENABLE_CORS=false
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Headers
SECURE_HEADERS_ENABLED=true
HTTPS_ONLY=true

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_ENABLED=true
ALERTING_ENABLED=true

# Resource Limits
MEMORY_LIMIT=1G
CPU_LIMIT=1000m
MAX_WORKERS=4

# Backup and Retention
LOG_RETENTION_DAYS=30
DATABASE_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=90

# Cost Optimization
SPOT_INSTANCES_ENABLED=true
SCHEDULED_SCALING_ENABLED=true
RESOURCE_HIBERNATION_ENABLED=true