# Credit Card Detector Environment Configuration
# Copy this file to .env and customize for your environment

# Application Settings
FLASK_ENV=development
DEBUG=false
HOST=0.0.0.0
PORT=5000
SECRET_KEY=change-this-in-production
LOG_LEVEL=INFO

# Database (for production environments)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/creditcard_detector
POSTGRES_PASSWORD=postgres
POSTGRES_DB=creditcard_detector
POSTGRES_USER=postgres

# Redis (for production environments)
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# Claude Skills Integration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_API_URL=https://api.anthropic.com

# N8n Integration
N8N_WEBHOOK_PORT=8080
N8N_WEBHOOK_HOST=localhost

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin
PRESIDIO_LOG_LEVEL=INFO

# Build and Deployment
BUILD_TARGET=basic
NGINX_PORT=80
NGINX_SSL_PORT=443

# Development
PRESIDIO_ANALYZER_PORT=3000
PRESIDIO_ANONYMIZER_PORT=3001
DETECTOR_PORT=5000