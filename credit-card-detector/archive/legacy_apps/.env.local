# Local testing environment variables
# Optimized for local development with proper Docker networking

# Database configuration (local development)
POSTGRES_PASSWORD=local_dev_password
POSTGRES_DB=creditcard_detector_local
POSTGRES_USER=postgres

# Redis configuration (local development)
REDIS_PASSWORD=local_redis_password

# Application configuration
CLAUDE_API_KEY=local_claude_api_key_for_testing
SECRET_KEY=local_secret_key_for_development_only
FLASK_ENV=development
LOG_LEVEL=INFO
SUBAGENT_PORT=5000

# Grafana configuration (local development)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123
GF_USERS_ALLOW_SIGN_UP=false
GF_INSTALL_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource

# Presidio service URLs (local Docker network)
PRESIDIO_ANALYZER_URL=http://localhost:3000
PRESIDIO_ANONYMIZER_URL=http://localhost:3001

# Local development settings
DEBUG=true
TESTING=true

# Docker networking configuration
# This ensures services can communicate properly in local development
DOCKER_HOST_IP=host.docker.internal
LOCAL_NETWORK_BRIDGE=bridge

# Performance settings for local testing
MAX_CPU_PERCENT=80
MAX_MEMORY_PERCENT=75
MAX_BATCH_SIZE=100

# Monitoring settings
PROMETHEUS_RETENTION=7d
METRICS_INTERVAL=15s